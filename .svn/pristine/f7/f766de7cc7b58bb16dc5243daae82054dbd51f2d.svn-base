	<include file="Public/Template/Header.html" />
  <form method="post" action="{:u('')}" class="am-form" data-am-validator>
  <fieldset>

	<div class="am-g am-margin-top-sm"  style="background: white;color:black;">
	  <div class="am-u-sm-12 am-margin-top-sm">
		<div class="am-radio">
			<label>
				<input type="radio" name="types" value="day" checked>按天
			</label>
		</div>
	  <div class="am-radio">
		  <label>
			  <input type="radio" name="types" value="hours">按小时
		  </label>
	  </div>
		<div class="am-form-group">
			<label for="doc-ipt-num-1">时长</label>
			<input name="when_long" class="" id="doc-ipt-num-1" value="1" required />
		</div>
	  </div>
	</div>

	<div class="am-form-group am-margin-top-sm">
	  <input type="text" class="" name="room_num" id="doc-ipt-text-1" minlength="1" placeholder="请准确输入房间号" required>
	</div>

  <div class="am-form-group am-margin-top-sm">
	  <input type="text" class="" name="number" id="doc-ipt-text-2" minlength="1" placeholder="请准确输入人气数" required>
  </div>
	<!--<div class="am-form-group">-->
	  <!--<textarea name="mbz" class="" rows="5" id="doc-ta-1" minlength="1" placeholder="【请填写当前开始数量，漏填或虚假不负责补单】备注您需要备注的内容" required ></textarea>-->
	<!--</div>-->
	<p><button type="submit" class="am-btn am-btn-primary am-u-sm-12">提交订单</button></p>
	</fieldset>
	</form>
	<include file="Public/Template/Footer.html" />